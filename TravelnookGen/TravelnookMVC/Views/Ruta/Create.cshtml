@model TravelnookMVC.Models.Ruta

@{
    ViewBag.Title = "View1";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Crear ruta</h2>

@using (Html.BeginForm("Create", "Ruta", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Articulo</legend>

        <div class="editor-label">
            @Html.LabelFor(model => model.Nombre)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Nombre)
            @Html.ValidationMessageFor(model => model.Nombre)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Provincia)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Provincia)
            @Html.ValidationMessageFor(model => model.Provincia)
        </div>


        <div class="editor-label">
            @Html.LabelFor(model => model.Descripcion)
        </div>
        <textarea cols="50">
        </textarea>
        <div class="editor-label">
            @Html.LabelFor(model => model.Puntuacion)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Puntuacion)
            @Html.ValidationMessageFor(model => model.Puntuacion)
        </div>
        <div class="editor-label">
            Añadir sitios:
        </div>


        <input type="submit" value="Crear" />
</fieldset>
}
@using (Html.BeginForm("SitioPorNombre", "Sitio", FormMethod.Post, new { enctype = "multipart/form-data" }))
{

    <input type="text" name="nombre" />
    <p>
        <input type="submit" value="Buscar" />
    </p>
}